<% provide(:title, "Content Providers") %>
<p id="notice"><%= notice %></p>

<section class="section--center mdl-grid  mdl-shadow--1dp">
    <div class="mdl-card mdl-cell mdl-cell--12-col">

<h1>Listing Content Providers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Homepage</th>
      <th>Node</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_providers.each do |content_provider| %>
      <tr>
        <td><%= content_provider.title %></td>
        <td><%= content_provider.name %></td>
        <td><%= content_provider.description %></td>
        <td><%= content_provider.image_url %></td>
        <td><%= content_provider.homepage %></td>
        <td><%= content_provider.node_id %></td>
        <td><%= link_to 'Show', content_provider %></td>
        <td><%= link_to 'Edit', edit_content_provider_path(content_provider) %></td>
        <td><%= link_to 'Destroy', content_provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content provider', new_content_provider_path %>

    </div>
</section>
